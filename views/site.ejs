<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Details - <%= site.site %></title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation bar -->
    <%- include('partials/navbar', { page: '' }) %>

    <!-- Hero Section -->
    <section class="container mx-auto p-8">
        <div class="bg-base-200 p-8 rounded-lg">
            <div class="hero-content text-center">
                <div>
                    <h1 class="text-4xl font-bold text-gray-900"><%= site.site %></h1>
                    <p class="text-lg text-gray-700 mt-4">
                        Below, you will find detailed information about the site: <strong><%= site.site %></strong>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Site Details Section -->
    <div class="container mx-auto p-8">
        <!-- Grid Layout -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <!-- Left Column: Site Image -->
            <div class="col-span-1">
                <img src="<%= site.image %>" alt="<%= site.site %>" class="w-full rounded-lg shadow-lg">
            </div>

            <!-- Right Column: Site Details -->
            <div class="col-span-1 space-y-4">
                <p><strong>Site Name:</strong> <%= site.site %></p>
                <p><strong>Site Description:</strong> <%= site.description %></p>
                <p><strong>Date:</strong> <%= site.date %> (<%= site.dateType %>)</p>
                <p><strong>Location:</strong> <% site.location %>, <% site.ProvinceOrTerritory.name %></p>
                <p><strong>Region:</strong> <%= site.ProvinceOrTerritory.region %></p>
                <p><strong>Geolocation:</strong> <%= site.latitude %>, <%= site.longitude %></p>
                <p><strong>Designated:</strong> <%= site.designated %></p>
            </div>
        </div>

        

    
    <!-- Back and Edit Buttons -->
    <div class="mt-8 text-center flex justify-center space-x-4 mb-8">
        <!-- Back Button -->
        <a href="#" onclick="history.back(); return false;" class="btn btn-primary">Back</a>
        
        <!-- Edit Button with Shadow -->
        <a href="/editSite/<%= site.siteId %>" class="btn btn-soft bg-yellow-500 text-white hover:bg-yellow-600">Edit</a>

    </div>



    <!-- JavaScript to Fetch Random Quote -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch("https://api.quotable.io/random")
                .then(response => response.json())
                .then(data => {
                    document.getElementById("quote").textContent = `"${data.content}"`;
                    document.getElementById("author").textContent = `- ${data.author}`;
                })
                .catch(error => {
                    console.error("Error fetching quote:", error);
                    document.getElementById("quote").textContent = "Failed to load quote.";
                });
        });
    </script>
</body>
</html>